<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="8dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="16dp"
    >

  <TextView
      android:id="@+id/workoutName"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:background="@drawable/view_card_background"
      android:padding="10dp"
      android:textAppearance="@style/workoutTitle"
      app:layout_constraintBottom_toTopOf="@+id/startWorkoutAction"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="Workout Fullbody"
      />

  <TextView
      android:id="@+id/startWorkoutAction"
      android:layout_width="match_parent"
      android:layout_height="58dp"
      android:background="@drawable/button_background"
      android:clickable="true"
      android:focusable="true"
      android:gravity="center"
      android:paddingTop="10dp"
      android:text="@string/start_workout_button"
      android:textAppearance="@style/newWorkoutLabel.newWorkout"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      />

  <TextView
      android:layout_width="match_parent"
      android:layout_height="@dimen/radius_medium"
      android:background="@drawable/margin_background"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/startWorkoutAction"
      />

</androidx.constraintlayout.widget.ConstraintLayout>